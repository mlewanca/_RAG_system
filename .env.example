# RAG System Environment Variables Example
# Copy this file to .env and update with your values

# Security Settings
JWT_SECRET=your-secret-key-here-minimum-32-characters-long
JWT_ALGORITHM=HS256
TOKEN_EXPIRE_HOURS=24

# Paths - Update these for your system
BASE_DIR=/path/to/your/rag/data
DOCUMENTS_DIR=/path/to/your/rag/data/documents
CHROMA_DIR=/path/to/your/rag/data/chroma_db
LOGS_DIR=/path/to/your/rag/data/logs
QUARANTINE_DIR=/path/to/your/rag/data/quarantine

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=3

# Model Configuration
EMBEDDING_MODEL=nomic-embed-text
GENERATION_MODEL=gemma3:27b
MULTIMODAL_MODEL=qwen3:30b

# Ollama Configuration
# For external Ollama: http://your-ollama-host:11434
# For Windows/Mac Docker Desktop: http://host.docker.internal:11434
# For Linux Docker: http://172.17.0.1:11434 or host IP
OLLAMA_BASE_URL=http://host.docker.internal:11434

# Performance Settings
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=300

# Password Policy
PASSWORD_MIN_LENGTH=12
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL=true
PASSWORD_MAX_AGE_DAYS=90
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=30

# Rate Limiting (requests per minute by role)
RATE_LIMIT_SERVICE=5
RATE_LIMIT_DEVELOPER=15
RATE_LIMIT_ADMIN=50

# Development Settings (change for production)
DEBUG=false
LOG_LEVEL=INFO