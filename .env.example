# RAG System Environment Configuration
# Copy this file to .env and customize the values

# Base Configuration
BASE_DIR=/data
DOCUMENTS_DIR=/data/documents
QUARANTINE_DIR=/data/quarantine
CHROMA_DIR=/data/chroma

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# Security Configuration
JWT_SECRET=your-super-secret-key-must-be-at-least-32-characters-long-for-security
JWT_ALGORITHM=HS256
TOKEN_EXPIRE_HOURS=24

# Password Policy
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL=true
PASSWORD_MAX_AGE_DAYS=90

# Account Security
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=30

# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434
EMBEDDING_MODEL=nomic-embed-text
GENERATION_MODEL=gemma2:27b

# File Upload Configuration
MAX_FILE_SIZE_MB=50
ALLOWED_FILE_EXTENSIONS=.pdf,.txt,.md,.docx,.doc,.xlsx,.xls,.png,.jpg,.jpeg

# CORS Configuration (comma-separated list)
CORS_ORIGINS=http://localhost:3000,http://localhost:8501,http://localhost:8880,https://localhost:8843

# Rate Limiting (requests per minute)
RATE_LIMIT_ADMIN=50
RATE_LIMIT_DEVELOPER=15
RATE_LIMIT_SERVICE=5
RATE_LIMIT_HR_MANAGER=10
RATE_LIMIT_HR_STAFF=8
RATE_LIMIT_FINANCE_USER=8
RATE_LIMIT_FINANCE_MANAGER=12
RATE_LIMIT_LEGAL_COUNSEL=12
RATE_LIMIT_MARKETING_LEAD=15
RATE_LIMIT_EXECUTIVE=25

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/data/logs/api.log
AUDIT_LOG_FILE=/data/logs/audit.log

# Session Configuration
SESSION_TIMEOUT_HOURS=8
REFRESH_TOKEN_EXPIRE_DAYS=7

# Retriever Configuration
USE_OPTIMIZED_RETRIEVER=false
REDIS_URL=redis://localhost:6379

# Retrieval Optimization
VECTOR_SEARCH_WEIGHT=0.7
KEYWORD_SEARCH_WEIGHT=0.3
EMBEDDING_CACHE_TTL=3600
RESPONSE_CACHE_TTL=1800

# Monitoring Configuration
GRAFANA_PASSWORD=admin